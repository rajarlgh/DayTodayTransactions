<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayTodayTransactions.Pages.AddTransactionPage"
             Title="{Binding TransactionText}">
    <VerticalStackLayout Padding="10">

        <!-- Transaction Type Picker -->
        <Picker Title="Type" SelectedItem="{Binding Type}" IsEnabled="False">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Income</x:String>
                    <x:String>Expense</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Category Picker -->
        <Picker Title="Category" IsVisible="{Binding IsCategoryVisible}"
                ItemsSource="{Binding ListOfCategories}" 
                SelectedItem="{Binding SelectedCategory}">
            <Picker.ItemDisplayBinding>
                <Binding Path="Name" />
            </Picker.ItemDisplayBinding>
        </Picker>

        <!-- Account Picker -->
        <Picker Title="Account" 
                ItemsSource="{Binding ListOfAccounts}" 
                SelectedItem="{Binding SelectedAccount}">
            <Picker.ItemDisplayBinding>
                <Binding Path="Name" />
            </Picker.ItemDisplayBinding>
        </Picker>

        <!-- Amount Entry -->
        <Entry Placeholder="Amount" Text="{Binding Amount}" Keyboard="Numeric"/>

        <!-- Reason Entry -->
        <Entry Placeholder="Reason" Text="{Binding Reason}"/>

        <!-- Date Picker -->
        <DatePicker Date="{Binding Date}" />

        <!-- Save Transaction Button -->
        <Button Text="Save Transaction" Command="{Binding AddTransactionCommand}" />

    </VerticalStackLayout>
</ContentPage>
