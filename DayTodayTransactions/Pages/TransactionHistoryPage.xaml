        <!-- Display Calculated Balances -->
        <!--<StackLayout Padding="10">
            <Label Text="Total Income:" />
            <Label Text="{Binding TotalIncome, StringFormat='${0:N2}'}" />

            <Label Text="Total Expenses:" />
