            <Label Text="Remaining Balance:" />
            <Label Text="{Binding Balance, StringFormat='${0:N2}'}" />
        </StackLayout>-->

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- For Scrollable Content -->
                <RowDefinition Height="*" />
                <!-- For Scroll Message -->
                <RowDefinition Height="Auto" />
                <!-- For Save Button -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ScrollView Grid.Row="1" Scrolled="OnScrollViewScrolled" Grid.ColumnSpan="3" >
                <StackLayout>
                    <coreControls:CardView Title="Transactions"  Padding="10">
                        <StackLayout>
                            <StackLayout Padding="10">
                            <microcharts:ChartView x:Name="donutChart" 
                                                   HeightRequest="500" 
                                                   WidthRequest="300" 
                                                   IsVisible="{Binding DoVisibleChart}" />
                            </StackLayout>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>

                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Text="☰"  FontSize="30" Command="{Binding ShowMenuCommand}" />
                                <Button Grid.Column="1" Text="Transactions" Command="{Binding ShowContentCommand}" />
                                <Button Grid.Column="2" Text="☰"  FontSize="30" Command="{Binding ShowMenuCommand}" />


                            </Grid>

                            <Grid IsVisible="{Binding DoVisibleChart, Converter={StaticResource InverseBooleanConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <CollectionView ItemsSource="{Binding ChartEntries}" Grid.Row="0"  >
                                    <CollectionView.ItemsLayout>
                                        <!-- Correct Grid layout with 2 columns -->
                                        <GridItemsLayout Orientation="Vertical" Span="2" />
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="5" BackgroundColor="White">
                                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                    <!-- Label for each entry -->
                                                    <Label Text="{Binding Label}" FontAttributes="Bold" />
                                                    <Label Text="{Binding ValueLabel}" FontSize="Small" />
                                                </VerticalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Grid>
                        </StackLayout>
                    </coreControls:CardView>
                </StackLayout>
            </ScrollView>
            <!-- Overlay with dynamic scroll message -->
            <!--<Label
                  Grid.Row="2"
                  Text="{Binding ScrollMessage}"
                  VerticalOptions="End"
                  HorizontalOptions="Center"
                  FontSize="Small"
                  Margin="0,0,0,10"
                  Opacity="0.8"
                  FontAttributes="Italic" />-->

            <Button  Grid.Row="2" Grid.Column="0" Margin="25,0,0,0" Text="-"></Button>
            <Button  Grid.Row="2" Grid.Column="2" Margin="0,0,25,0" Text="+"></Button>
        </Grid>
