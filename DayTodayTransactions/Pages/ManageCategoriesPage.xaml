<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayTodayTransactions.Pages.ManageCategoriesPage"
             xmlns:vm="clr-namespace:DayTodayTransactions.ViewModels"
             Title="Manage Categories">
    <VerticalStackLayout Padding="10">
        <!-- List of categories -->
        <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding .}" VerticalOptions="Center" />
                        <Button Text="Remove" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ManageCategoriesViewModel}}, Path=RemoveCategoryCommand}" CommandParameter="{Binding .}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add new category -->
        <Entry Placeholder="New Category" Text="{Binding NewCategory}" />
        <Button Text="Add Category" Command="{Binding AddCategoryCommand}" />
    </VerticalStackLayout>
</ContentPage>
