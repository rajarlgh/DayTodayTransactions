<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DayTodayTransactions.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DayTodayTransactions.Pages"
    FlyoutBehavior="Flyout"
    Title="Day Today Transactions">

    <!-- Tab bar to replace TabbedPage -->
    <TabBar>
        <Tab Title="Income">
            <ShellContent
                Title="Income"
                ContentTemplate="{DataTemplate pages:IncomePage}" />
        </Tab>

        <Tab Title="Expense">
            <ShellContent
                Title="Expense"
                ContentTemplate="{DataTemplate pages:ExpensePage}" />
        </Tab>

        <Tab Title="Breakdown">
            <ShellContent
                Title="Breakdown"
                ContentTemplate="{DataTemplate pages:BreakdownPage}" />
        </Tab>
        <Tab Title="Transactions">
            <ShellContent
                Title="Breakdown"
                ContentTemplate="{DataTemplate pages:TransactionHistoryPage}" />
        </Tab>
    </TabBar>

</Shell>
